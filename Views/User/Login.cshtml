@model UserLoginModel

<div class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="User" asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="text" id="email" name="email" class="form-control" asp-for="Email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control" asp-for="Password">
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="submit" class="btn btn-primary mt-3">Login</button>
                            <a href="/user/register" class="mt-3 mx-1">dont have account?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>